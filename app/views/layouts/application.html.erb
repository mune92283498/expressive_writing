<!DOCTYPE html>
<html>

<head>
  <title>ExpressiveWritingApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="app-title navbar navbar-expand-md navbar-light bg-light">
    <div class="navbar-brand">ExpressiveWriting</div>
  </div>
  <div class="container">
    <% if flash[:notice].present? %>
    <div class="alert alert-success"><%= flash.now[:notice] %></div>
    <% end %>
    <% if flash[:alert].present? %>
    <p class="alert alert-danger"><%= flash.now[:alert] %></p>
    <% end %>

    <%= yield %>
  </div>
</body>

</html>